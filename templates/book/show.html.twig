{% extends 'base.html.twig' %}

{% block title %}Book
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<h1 class="mb-4">{{ book.title }}</h1>

		<div class="row">
			<div class="col-sm-6">
				<table class="table">
					<tbody>
						<tr>
							<th>Id</th>
							<td>{{ book.id }}</td>
						</tr>
						<tr>
							<th>Title</th>
							<td>{{ book.title }}</td>
						</tr>
						<tr>
							<th>Author</th>
							<td>{{ book.author }}</td>
						</tr>
						<tr>
							<th>ISBN</th>
							<td>{{ book.isbn }}</td>
						</tr>
						<tr>
							<th>Year</th>
							<td>{{ book.year }}</td>
						</tr>
						<tr>
							<th>Publisher</th>
							<td>{{ book.publisher }}</td>
						</tr>
						<tr>
							<th>Description</th>
							<td>{{ book.description }}</td>
						</tr>
					</tbody>
				</table>

				<a href="{{ path('app_book_edit', {'id': book.id}) }}" class="btn btn-primary mr-2">Edit</a>

				{{ include('book/_delete_form.html.twig') }}

				<a href="{{ path('app_book_index') }}" class="btn btn-secondary mt-2">Back to list</a>
			</div>
		</div>
	</div>
{% endblock %}
