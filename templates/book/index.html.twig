{% extends 'base.html.twig' %}

{% block title %}Books index
{% endblock %}
{% block stylesheets %}
	<link href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
	<div class="container">

		<table class="stripe" id="bookTable">
			<thead>
				<tr>
					<th>Id</th>
					<th>Title</th>
					<th>Author</th>
					<th>ISBN</th>
					<th>Year</th>
					<th>Publisher</th>
					<th>Description</th>
				</tr>
			</thead>
			<tbody>
				{% if book is defined %}
					{% for b in book %}
						<tr>
							<td>{{b.id}}</td>	
							<td>
								<a href="{{ path('app_book_show',{'id' : b.id}) }}">{{b.title}}</a>
							</td>
							<td>{{b.author}}</td>
							<td>{{ b.isbn }}</td>
							<td>{{ b.year }}</td>
							<td>{{ b.publisher }}</td>
							<td>{{ b.description }}</td>
						</tr>
					{% endfor %}
				{% endif %}
			</tbody>
		</table>
</div>
<a href="{{ path('app_book_new') }}">Create new</a>{% endblock %}{% block javascripts %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.4/jquery.min.js" integrity="sha512-pumBsjNRGGqkPzKHndZMaAG+bir374sORyzM3uulLV14lN5LyykqNk8eEeUlUkB3U0M4FApyaHraT65ihJhDpQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
<script>
	$(document).ready(function () {
$('#bookTable').DataTable();
});
</script>{% endblock %}
